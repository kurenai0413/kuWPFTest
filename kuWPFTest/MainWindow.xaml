<Window x:Class="kuWPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:local="clr-namespace:kuWPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        Left="0" Top="0" Closed="Window_Closed" WindowStyle="None" WindowState="Maximized"
        KeyDown="Window_KeyDown" Background="#FFBF5279">
    <Grid>
        <Button Content="Open Camera Stream" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
                Margin="22,959,0,0" VerticalAlignment="Top" Width="250" Height="40" 
                FontSize="20" x:Name="OpenCameraButton" Click="OpenCameraButton_Click" FontWeight="Bold"/>
        <Button Content="Close Camera" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
                Margin="22,1012,0,0" VerticalAlignment="Top" Width="250" Height="40" 
                FontSize="20" x:Name="CloseCameraButton" Click="CloseCameraButton_Click" FontWeight="Bold"/>
        <Button Content="Change Hair Color" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
                Margin="903,970,0,0" VerticalAlignment="Top" Width="275" Height="68" 
                FontSize="20" x:Name="ProcessingButton" Click="ProcessingButton_Click" FontWeight="Bold"/>
        <WindowsFormsHost HorizontalAlignment="Center" Height="900" Margin="275,28,37,0" 
                          VerticalAlignment="Top" Width="1600" Background="Ivory" 
                          Foreground="#FFFAF7F7">
            <wf:PictureBox x:Name="PictureBox"/>
        </WindowsFormsHost>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Left"
                   Margin="301,968,0,0" TextWrapping="Wrap" Name="CameraStatusText" 
                   Text="Camera is closed." FontSize="20" Width="254" Height="40" Foreground="White"/>
        <Button Content="#BE9C7A" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
            Margin="22,318,0,0" VerticalAlignment="Top" Width="200" Height="50" 
            FontSize="24" x:Name="SetColorButton1" Click="SetColorButton1_Click" Background="#FFBE9C7A" Foreground="White"/>
        <Button Content="#CA3A1C" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
            Margin="22,424,0,0" VerticalAlignment="Top" Width="200" Height="50" 
            FontSize="24" x:Name="SetColorButton2" Click="SetColorButton2_Click" Background="#FFCA3A1C" Foreground="White"/>
        <Button Content="#A80001" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
            Margin="22,524,0,0" VerticalAlignment="Top" Width="200" Height="50" 
            FontSize="24" x:Name="SetColorButton3" Click="SetColorButton3_Click" Background="#FFA80001" Foreground="White"/>
        <Button Content="#A62C42" HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
            Margin="22,635,0,0" VerticalAlignment="Top" Width="200" Height="50" 
            FontSize="24" x:Name="SetColorButton4" Click="SetColorButton4_Click" Background="#FFA62C42" Foreground="White"/>
    </Grid>
</Window>
